# <%= metadata.name %>

<%= metadata.description %>

# Requirements
<% unless metadata.platforms.empty? %>

## Platform:

<% metadata.platforms.each do |platform| %>
* <%= platform %>
<% end %>
<% end %>
<% unless metadata.dependencies.empty? && metadata.recommendations.empty? && metadata.suggestions.empty? && metadata.conflicting.empty? %>

## Cookbooks:

<% metadata.dependencies.each do |cookbook| %>
* <%= cookbook %>
<% end %>
<% metadata.recommendations.each do |cookbook| %>
* <%= cookbook %> (Recommended but not required)
<% end %>
<% metadata.suggestions.each do |cookbook| %>
* <%= cookbook %> (Suggested but not required)
<% end %>
<% metadata.conflicting.each do |cookbook| %>
* Conflicts with <%= cookbook %>
<% end %>
<% end %>
<% unless recipes.empty? %>

# Recipes

<% recipes.each do |recipe| %>
* <% if recipe.description.empty? %><%= recipe.name %><% else %>[<%= recipe.name %>](#<%= recipe.name.delete(':') %>)<% end %><% unless recipe.short_description.empty? %> - <%= recipe.short_description %><% end %>
<% end %>
<% recipes.each do |recipe| -%>
<% unless recipe.description.empty? -%>

## <%= recipe.name %>

<%= recipe.description %>
<% end %>
<% end %>
<% end %>
<% unless resources.empty? %>

# Resources

<% resources.each do |resource| %>
* <% if resource.description.empty? %><%= resource.resource_name %><% else %>[<%= resource.resource_name %>](#<%= resource.resource_name %>)<% end %><% unless resource.short_description.empty? %> - <%= resource.short_description %><% end %>
<% end %>
<% resources.each do |resource| %>
<% unless resource.description.empty? %>

## <%= resource.resource_name %>

<%= resource.description %>
<% end %>
<% unless resource.actions.empty? %>

### Actions

<% if resource.default_action.is_a?(Array) %>
* Default actions: [<%= resource.default_action.join ', ' %>]
<% end %>
<% resource.actions.each do |action| %>
* <%= action.to_s %><% if resource.action_descriptions.key?(action) %>: <%= resource.action_descriptions[action] %><% end %>
<% end %>
<% end %>
<% unless resource.properties.empty? %>

### Properties

<% resource.properties.each do |name, property| %>
* <%= property.to_s %><% unless property.description.empty? %>: <%= property.description %><% end %>
<% end %>
<% end %>
<% end %>
<% end %>
